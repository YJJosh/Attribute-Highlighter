{
  "manifest_version": 3,
  "name": "Attribute Highlighter",
  "version": "1.0.0",
  "description": "Highlight elements with specific attributes (data-cy, data-testid, etc.)",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-highlight": {
      "suggested_key": {
        "default": "Alt+Shift+H"
      },
      "description": "Toggle attribute highlighting"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared.js", "content.js"],
      "css": ["content.css"]
    }
  ]
}
